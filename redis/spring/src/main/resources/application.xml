<?xml version="1.0" encoding="utf-8" ?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="jedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig" p:maxIdle="100" p:maxTotal="1000"
          p:minIdle="1" p:maxWaitMillis="2000"/>

    <bean name="jedisConnectionFactory" class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory"
          p:hostName="ivfzhoudockerredis" p:port="6379" p:poolConfig-ref="jedisPoolConfig"/>

    <bean name="stringRedisSerializer" class="org.springframework.data.redis.serializer.StringRedisSerializer"/>

    <bean name="genericJackson2JsonRedisSerializer"
          class="org.springframework.data.redis.serializer.GenericJackson2JsonRedisSerializer"/>

    <bean name="jackson2JsonRedisSerializer"
          class="org.springframework.data.redis.serializer.Jackson2JsonRedisSerializer"
          c:type="cn.ivfzhou.java.redis.spring.bean.User"/>

    <bean name="jdkSerializationRedisSerializer"
          class="org.springframework.data.redis.serializer.JdkSerializationRedisSerializer"/>

    <bean name="jaxb2Marshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
        <property name="classesToBeBound">
            <list>
                <value>cn.ivfzhou.java.redis.spring.bean.User</value>
            </list>
        </property>
    </bean>

    <bean name="oxmSerializer" class="org.springframework.data.redis.serializer.OxmSerializer"
          p:marshaller-ref="jaxb2Marshaller" p:unmarshaller-ref="jaxb2Marshaller"/>

    <bean name="redisTemplate" class="org.springframework.data.redis.core.RedisTemplate"
          p:connectionFactory-ref="jedisConnectionFactory" p:keySerializer-ref="stringRedisSerializer"
          p:valueSerializer-ref="jackson2JsonRedisSerializer"/>

    <bean name="redisTemplate2" class="org.springframework.data.redis.core.RedisTemplate"
          p:connectionFactory-ref="jedisConnectionFactory" p:keySerializer-ref="stringRedisSerializer"
          p:valueSerializer-ref="stringRedisSerializer"/>

    <bean name="redisTemplate3" class="org.springframework.data.redis.core.RedisTemplate"
          p:connectionFactory-ref="jedisConnectionFactory" p:keySerializer-ref="jdkSerializationRedisSerializer"
          p:valueSerializer-ref="jdkSerializationRedisSerializer"/>

    <bean name="redisTemplate4" class="org.springframework.data.redis.core.RedisTemplate"
          p:connectionFactory-ref="jedisConnectionFactory" p:keySerializer-ref="stringRedisSerializer"
          p:valueSerializer-ref="genericJackson2JsonRedisSerializer"/>

    <bean name="redisTemplate5" class="org.springframework.data.redis.core.RedisTemplate"
          p:connectionFactory-ref="jedisConnectionFactory" p:keySerializer-ref="stringRedisSerializer"
          p:valueSerializer-ref="oxmSerializer"/>

</beans>
